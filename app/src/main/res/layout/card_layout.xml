<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Activity Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityName"
            android:layout_alignParentTop="true"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:background="#ffff8800"
            android:layout_below="@id/activityName"
            android:id="@+id/itemImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:text="Activity Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityDetails"
            android:layout_below="@id/itemImage"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>

        <TextView
            android:text="Activity Host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityHost"
            android:layout_below="@id/activityDetails"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/activityHost"
            android:layout_marginTop="10dp"
            android:weightSum="2">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/join"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/join" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/refer"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/refer" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
